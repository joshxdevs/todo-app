            "exec": [
              "let data = pm.response.json();",
              "if (data.token) {",
              "    pm.environment.set(\"token\", data.token);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Add Todo",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "{{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"title\": \"Go to gym\"\n}"
        },
        "url": "{{base_url}}/todo"
      }
    },
    {
      "name": "Get Todos",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "{{token}}"
          }
        ],
